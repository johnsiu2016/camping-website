<% include ../partials/header.ejs %>


<div class="container">
    <h1 style="text-align: center;">Edit <%= foundCampground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= foundCampground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" value="<%= foundCampground.name %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" value="<%= foundCampground.image %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[desc]" value="<%= foundCampground.desc %>">
            </div>
            <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer.ejs %>